 package plaid.arrays;

@builtin
 state SharedArray {
     method void setUnique(immutable Integer index, shared Object obj) [ unique SharedArray this ];
     method void setShared(immutable Integer index, shared Object obj) [ shared SharedArray this ];
     method void setLocalShared(immutable Integer index, shared Object obj) [ local shared SharedArray this ];
     method void applyUnique(immutable Integer index, immutable SharedArrayOperations ops) [ unique SharedArray this ];
     method void applyShared(immutable Integer index, immutable SharedArrayOperations ops) [ shared SharedArray this ];     
     method void applyLocalShared(immutable Integer index, immutable SharedArrayOperations ops) [ local shared SharedArray this ];     
 }