package plaid.util;

state BenchmarkTimer {
    @sequential
    val timer;
    
    @sequential
    @cheap
    method void start() [unique BenchmarkTimer this] {
        this.timer.start();
    }

    @sequential
    @cheap
    method void reset() [unique BenchmarkTimer this] {
        this.timer.reset();
    }
    
    @sequential
    @cheap
    method void mark(immutable String msg) [unique BenchmarkTimer this] {
        this.timer.mark(msg);
    }

    @sequential
    @cheap
    method void end(immutable String msg) [unique BenchmarkTimer this] {
        this.timer.end(msg);
    }
}