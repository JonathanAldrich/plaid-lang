package plaid.examples.forkJoin;

state SimpleForkJoin {

    method void forkJoin(immutable Integer value) [local immutable SimpleForkJoin this] {
        
        val immutable Integer curValue = value - 1;
        
        val immutable Boolean stop = curValue == 0;
        
        match ( stop ) {
            case True  { /*nop*/ } 
            case False { 
                this.forkJoin(curValue);
                this.forkJoin(curValue);
            }
        }
    } 
}
