package plaid.examples.webserver.plaid;

method void transferFile(unique Socket client, immutable String path) {
    match ( path == "/" ) {
        case True {
            transferHeader(client, "index.html");
            transferData(client, "index.html");        
        }
        case False {
            transferHeader(client, path);
            transferData(client, path);
        }
    };
    client.flush();
}