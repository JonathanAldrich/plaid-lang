package plaid.ast;

// Join is supposed to be used in a let binding-like fashion, i.e.:
// Join (in1 : PermType / in2 : PermType => out : PermType) in EXPR

state Join case of Expression {
	val /*ID*/ in1;
	val /*ID*/ in2;
	val /*ID*/ out;
	
	val /*Expression*/ body;

	method accept(/*ASTVisitor*/ v) {
		v.visitJoin(this);
	}
}