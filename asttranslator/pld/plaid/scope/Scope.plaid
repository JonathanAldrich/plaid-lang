package plaid.scope;

import plaid.ast.*;
import plaid.ast.types.*;
import plaid.ast.visitor.*;

state Scope { // this would eventually be a field in every AST Node
	val /* map<String,  Symbol>*/ symbols;
	
	method lookup(name);
	
	method shallowlookup(name) {
		ifElse {symbols.containsKey(name)} {
			symbols.get(name);
		} {
			NONE;
		}
	}
}