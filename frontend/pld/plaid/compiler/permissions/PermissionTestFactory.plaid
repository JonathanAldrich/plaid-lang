			ctx.assertTrue(match (UNIQUE.returnPerm(NONEP)) {
				case Some {
					match (UNIQUE.returnPerm(NONEP).value) {
						case UniquePermission { true }
						default { false }
					} 
				}
				case None { false }
			});
		});

