List <Case> CaseList() :
{
    Token t,caseToken;
    BlockExpr body;
    List < Case > cl = new ArrayList < Case > ();
    QualifiedIdentifier qi;
}
{
    (
        LOOKAHEAD(2)
        caseToken = < CASE > qi = QualifiedIdentifier()
        body = BlockExpr()
        {
            cl.add(new PatternCase(caseToken, qi, body)); // no bound variable	
        }
    )*
	[
