Expr AndExpr() :
{
    Expr e;
    Expr arg;
    Token t;
}
{
    e = EqualityExpr()
    (
        t = "&" arg = EqualityExpr() { e = new InfixOperatorExpr(t, e, new Identifier(t,t.image), arg); }
    )*
	{ return e; }
