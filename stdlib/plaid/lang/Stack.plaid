package plaid.lang;

state Stack = List { var head = new Nil; } with {
  
  method /*Option A*/ push(elem) {
    prepend(elem);
  }
  
  method pop() {
    match (head) {
      case Cons {
        val ret = createSome(head.value);
        head = head.next;
        ret;
      }
      default { NONE } //return None
    }
  }
  
  method /*Option A*/ peek() {
  	match(head) {
  	  case Cons {
  	    createSome(head.value);
  	  }
  	  default { NONE } // return None
  	}
  }

}