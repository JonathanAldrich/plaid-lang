package coreExamples.tagTest;

import java.lang.*;

state R { }
state L { }
state RL { }

state Right case of R {
    var right = "right";
}

state Left case of L {
    var left = "left";
}

state RightLeft case of RL = Right with Left with { 
    var end = "end";
}

method main() {
    var a = new RightLeft;
    match (a) {
        case Right {     
            System.out.println("Right - succeed");
        }
        case RightLeft {     
            System.out.println("RightEnd - fail");
        }
        default {
            System.out.println("Default - fail");            
        }
    };
    
    match (a) {
        case Left {     
            System.out.println("Left - succeed");
        }
        case RightLeft {     
            System.out.println("RightEnd - fail");
        }
        default {
            System.out.println("Default - fail");            
        }
    };


    match (a) {
        case RightLeft {     
            System.out.println("RightLeft - succeed");
        }
        default {
            System.out.println("Default - fail");            
        }
    };
}
