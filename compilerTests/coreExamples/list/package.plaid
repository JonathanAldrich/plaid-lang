package coreExamples.list;

state TestNil {
	method insert(x) {
		this <<- TestCons with { var value = x; var next = new TestNil; };
	}
}

state TestCons {
	var value;
	var next;
	
	method insert(x) {
		this.next.insert(x);
	}
}

state TestList {
	var head = new TestNil;
	
	method insert(x) {
		this.head.insert(x);
	}
	
	method first() {
		this.head.value;
	}
	
	method second() {
		this.head.next.value;
	}
}

method main() {
	var l = new TestList;
	l.insert(1);
	l.insert(2);
	java.lang.System.out.println("This should be 1: " + l.first());
	java.lang.System.out.println("This should be 2: " + l.second());
	
	val list = new plaid.lang.List { var head = new plaid.lang.Nil;};
	list.add(1);
	list.add(2);
	java.lang.System.out.print("This should say \"2 1\": ");
	list.foldr(fn (e,z) => { java.lang.System.out.print("" + e + " "); e }, 0);
	java.lang.System.out.println("");
	java.lang.System.out.print("This should say \"1 2\": ");
	list.foldl(fn (e,z) => { java.lang.System.out.print("" + e + " "); e }, 0);
	java.lang.System.out.println("");
	
	val listR = new plaid.lang.List { var head = new plaid.lang.Nil;};
	listR.add(1);
	listR.add(2);
	val Rlist = listR.reverse();
	java.lang.System.out.print("This should say \"2 1\": ");
	Rlist.map(fn (n) => java.lang.System.out.print("" + n + " "));
	java.lang.System.out.println("");
	
	
}